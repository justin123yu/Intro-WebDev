<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{title}}</title>
    <link rel="icon" href="/public/favicon.ico" sizes="70x70" type="image/ico">
    <link rel='stylesheet' href ='/public/stylesheets/layout.css'/>
    <link rel='stylesheet' href="/public/stylesheets/home.css">
    <link rel='stylesheet' href="/public/stylesheets/card.css">
    <script defer src="/public/scripts/registration.js"></script>
    <script defer src="/public/scripts/frontendjs.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
<body>
    <div id="body-container">
    {{>banner}}
    {{>nav}}
    {{#if (emptyObject messages)}}
    {{> flashmessage}}
    {{/if}}
    {{{body}}}
    {{>footer}}
    </div>
    {{!-- <h1 id="items-count"></h1>
    <div id="container"></div> --}}
    {{#if logged}}
    <script>
      let ele = document.getElementById("logout");
      if(ele){
          ele.onclick = (even) =>{
            fetch('/users/logout',{
              method:"POST"
            })
            .then((data) =>{
              location.replace('/');
            })
          }
      }
    </script>
    {{/if}}
</body>
</html>